# ---- Base ---------------------------------------------------------
BASE_DOMAIN=lab.localhost          # e.g. grafana.lab.localhost, id.lab.localhost
TZ=Etc/UTC

# ---- Grafana ------------------------------------------------------
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=change-me-now
# Optional: where the root domain redirects (Step 2's caddy-config)
# e.g. /d/selftest/self-test?orgId=1
GRAFANA_DEFAULT_VIEW=/

# ---- MariaDB / Nextcloud -----------------------------------------
MYSQL_ROOT_PASSWORD=replace-with-strong
MYSQL_PASSWORD=replace-with-strong   # for nextcloud app user

# ---- Vaultwarden --------------------------------------------------
VAULTWARDEN_ADMIN_TOKEN=replace-with-strong

# ---- LibreChat OIDC (points to Authelia/“id” site) ----------------
LIBRECHAT_OIDC_CLIENT_ID=librechat
LIBRECHAT_OIDC_CLIENT_SECRET=replace-with-strong

# ---- LocalAI ------------------------------------------------------
# 0 => auto threads. Tune if you want to cap CPU usage.
LOCALAI_THREADS=0

# ---- Flowise (optional basic auth) --------------------------------
FLOWISE_USER=admin
FLOWISE_PASS=change-me-now
