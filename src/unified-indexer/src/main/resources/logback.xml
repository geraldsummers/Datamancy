<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -- %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set root logger to WARN -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Keep application-specific logs at WARN level -->
    <logger name="org.datamancy" level="WARN"/>

    <!-- Suppress verbose third-party libraries -->
    <logger name="io.netty" level="WARN"/>
    <logger name="io.ktor" level="WARN"/>
    <logger name="com.clickhouse" level="WARN"/>
</configuration>
