<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level %logger{0} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Silence noisy third-party libraries -->
    <logger name="org.apache.parquet" level="WARN"/>
    <logger name="org.apache.hadoop" level="ERROR"/>
    <logger name="Exposed" level="WARN"/>
    <logger name="com.zaxxer.hikari" level="WARN"/>
    <logger name="io.grpc" level="ERROR"/>
    <logger name="ktor.application" level="WARN"/>
    <logger name="io.qdrant.client" level="ERROR"/>

    <!-- Your application -->
    <logger name="org.datamancy.pipeline" level="INFO"/>

    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>
