# Trading Attributes Schema Extension
# Add trading-specific attributes to LDAP users

dn: cn=trading,cn=schema,cn=config
objectClass: olcSchemaConfig
cn: trading
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.1.1
  NAME 'evmAddress'
  DESC 'Ethereum-compatible address'
  EQUALITY caseIgnoreMatch
  SUBSTR caseIgnoreSubstringsMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.15
  SINGLE-VALUE )
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.1.2
  NAME 'evmKeyRef'
  DESC 'Vault path to EVM private key'
  EQUALITY caseIgnoreMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.15
  SINGLE-VALUE )
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.1.3
  NAME 'hyperliquidKeyRef'
  DESC 'Vault path to Hyperliquid API key'
  EQUALITY caseIgnoreMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.15
  SINGLE-VALUE )
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.1.4
  NAME 'allowedChains'
  DESC 'Allowed blockchain networks'
  EQUALITY caseIgnoreMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.15 )
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.1.5
  NAME 'allowedExchanges'
  DESC 'Allowed exchanges'
  EQUALITY caseIgnoreMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.15 )
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.1.6
  NAME 'maxTxPerHour'
  DESC 'Maximum transactions per hour'
  EQUALITY integerMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.27
  SINGLE-VALUE )
olcAttributeTypes: ( 1.3.6.1.4.1.99999.1.1.7
  NAME 'maxTxValueUSD'
  DESC 'Maximum transaction value in USD'
  EQUALITY integerMatch
  SYNTAX 1.3.6.1.4.1.1466.115.121.1.27
  SINGLE-VALUE )
olcObjectClasses: ( 1.3.6.1.4.1.99999.2.1.1
  NAME 'tradingAccount'
  DESC 'Trading account attributes'
  AUXILIARY
  MAY ( evmAddress $ evmKeyRef $ hyperliquidKeyRef $ allowedChains $
        allowedExchanges $ maxTxPerHour $ maxTxValueUSD ) )
