{
	admin off
	auto_https off
}

# HTTP-only sites for local/rootless development. Use with docker-compose.rootless.override.yml

# Auth endpoint
http://auth.${DOMAIN}:8080 {
	reverse_proxy authelia:9091
}

# Grafana
http://grafana.${DOMAIN}:8080 {
	reverse_proxy grafana:3000
}

# Adminer
http://adminer.${DOMAIN}:8080 {
	forward_auth authelia:9091 {
		uri /api/authz/forward-auth
		copy_headers Remote-User Remote-Groups Remote-Name Remote-Email
	}
	reverse_proxy adminer:8080
}

