[Unit]
Description=Bi-Weekly Credential Rotation Timer (Tier 1)
Documentation=file:///home/gerald/IdeaProjects/Datamancy/scripts/security/README.md
Requires=credential-rotation-biweekly.service

[Timer]
# Run every other Monday at 3:00 AM
# (2 weeks after Sunday weekly rotation)
OnCalendar=Mon *-*-8,22 03:00:00

# If system was off, run on next boot
Persistent=true

# Add random delay of 0-5 minutes
RandomizedDelaySec=300

AccuracySec=1min

[Install]
WantedBy=timers.target
